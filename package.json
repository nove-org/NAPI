{
    "name": "napi",
    "version": "1.0.0",
    "author": "nove-org",
    "license": "AGPL-3.0",
    "scripts": {
        "dev": "yarn run dev:sass & yarn run -s nodemon -e ts,json -x \"yarn run -s start\" -w \"./src\"",
        "dev:sass": "sass --watch src/sass:src/static/css --style=compressed",
        "build": "rm -rf build/ && tsc --build",
        "build:sass": "sass src/sass:src/static/css --style=compressed",
        "start": "yarn run build:sass && yarn run build && tsc-alias && node build/index.js",
        "db": "yarn run -s prisma migrate dev",
        "db:studio": "yarn run -s prisma studio",
        "test": "jest",
        "prepare": "husky install",
        "format": "yarn pretty-quick --staged",
        "checkCommitMessage": "yarn run -s commitlint -V -c --edit",
        "postinstall": "yarn -s patch-package"
    },
    "dependencies": {
        "@prisma/client": "^5.4.1",
        "@types/dompurify": "^3.0.5",
        "@types/html-minifier": "^4.0.5",
        "axios": "^1.6.0",
        "bcrypt": "^5.1.0",
        "chalk": "4.1.2",
        "check-password-strength": "^2.0.7",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "ejs": "^3.1.8",
        "express": "^4.18.2",
        "express-rate-limit": "^7.0.2",
        "fs-extra": "^11.1.0",
        "html-minifier": "^4.0.0",
        "isomorphic-dompurify": "^1.9.0",
        "micromatch": "^4.0.5",
        "multer": "^1.4.5-lts.1",
        "node-2fa": "^2.0.3",
        "nodemailer": "^6.9.4",
        "sass": "^1.58.3",
        "ua-parser-js": "^1.0.35",
        "yup": "^0.32.11",
        "zod": "^3.22.3"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^17.3.0",
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.14",
        "@types/express-useragent": "^1.0.2",
        "@types/fs-extra": "^11.0.1",
        "@types/micromatch": "^4.0.2",
        "@types/multer": "^1.4.7",
        "@types/node": "^18.11.10",
        "@types/nodemailer": "^6.4.9",
        "@types/ua-parser-js": "^0.7.36",
        "commitlint": "^17.3.0",
        "husky": "^8.0.2",
        "jest": "^29.3.1",
        "nodemon": "^2.0.20",
        "patch-package": "^6.5.0",
        "prettier": "^2.8.0",
        "pretty-quick": "^3.1.3",
        "prisma": "^5.4.1",
        "tsc-alias": "^1.8.8",
        "typescript": "^4.9.3"
    }
}
