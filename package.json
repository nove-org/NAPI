{
    "name": "napi",
    "description": "Main API project for all Nove products - authorization, version management, feature flags and more.",
    "version": "1.1.4",
    "license": "AGPL-3.0-only",
    "author": {
        "name": "Nove Group",
        "url": "https://nove.team"
    },
    "scripts": {
        "dev": "yarn run dev:sass & yarn run -s nodemon -e ts,json -x \"yarn run -s build && yarn run -s start\" -w \"./src\"",
        "dev:sass": "sass --watch src/sass:src/static/css --style=compressed",
        "build": "rm -rf build/ && tsc --build",
        "build:sass": "sass src/sass:src/static/css --style=compressed",
        "start": "tsc-alias && node build/index.js",
        "db": "yarn run -s prisma migrate dev",
        "db:studio": "yarn run -s prisma studio",
        "test": "jest",
        "prepare": "husky",
        "format": "yarn pretty-quick --staged",
        "checkCommitMessage": "yarn run -s commitlint -V -c --edit",
        "postinstall": "yarn -s patch-package"
    },
    "dependencies": {
        "@prisma/client": "^5.20.0",
        "@types/lodash": "^4.17.9",
        "axios": "^1.7.7",
        "bcrypt": "^5.1.1",
        "chalk": "4.1.2",
        "check-password-strength": "^2.0.10",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "ejs": "^3.1.10",
        "express": "^4.21.0",
        "express-rate-limit": "^7.3.1",
        "fs-extra": "^11.2.0",
        "isomorphic-dompurify": "^2.15.0",
        "lodash": "^4.17.21",
        "micromatch": "^4.0.8",
        "multer": "^1.4.5-lts.1",
        "node-2fa": "^2.0.3",
        "nodemailer": "^6.9.15",
        "openpgp": "^5.11.2",
        "sass": "^1.79.3",
        "ua-parser-js": "^1.0.39",
        "yup": "^1.4.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^19.5.0",
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/dompurify": "^3.0.5",
        "@types/express": "^5.0.0",
        "@types/express-useragent": "^1.0.5",
        "@types/fs-extra": "^11.0.4",
        "@types/html-minifier": "^4.0.5",
        "@types/micromatch": "^4.0.9",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.7.3",
        "@types/nodemailer": "^6.4.16",
        "@types/openpgp": "^4.4.22",
        "@types/ua-parser-js": "^0.7.39",
        "commitlint": "^19.5.0",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "nodemon": "^3.1.7",
        "patch-package": "^8.0.0",
        "prettier": "^3.3.2",
        "pretty-quick": "^4.0.0",
        "prisma": "^5.20.0",
        "tsc-alias": "^1.8.10",
        "typescript": "^5.6.2"
    }
}
